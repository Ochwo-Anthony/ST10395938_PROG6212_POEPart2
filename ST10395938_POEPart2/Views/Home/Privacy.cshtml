@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="container mt-5">
    <h2>Privacy Page</h2>

    <p>Your privacy policy information goes here.</p>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-info">@TempData["Message"]</div>
    }

    <form asp-action="ClearClaims" method="post">
        <button type="submit" class="btn btn-danger btn-lg"
                onclick="return confirm('Are you sure you want to delete all claims?');">
            Clear All Lecturer Claims
        </button>
    </form>
</div>
