@model ST10395938_POEPart2.Models.LecturerClaim
@{
    ViewData["Title"] = "Create Lecturer Claim";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-transparent border-0 pt-4">
                    <h2 class="text-center mb-0" style="font-weight: 600;">Submit New Claim</h2>
                    <p class="text-center text-muted mt-2">Fill in the details below to submit your claim</p>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" enctype="multipart/form-data" method="post">
                        <!-- Display general model errors -->
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger rounded-3 mb-4">
                                <h5 class="alert-heading">
                                    <i class="fas fa-exclamation-triangle me-2"></i>Please correct the following errors:
                                </h5>
                                <ul class="mb-0">
                                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                    {
                                        <li>@error.ErrorMessage</li>
                                    }
                                </ul>
                            </div>
                        }

                        <!-- Display file-specific errors -->
                        @if (ViewData.ModelState["Evidence"]?.Errors?.Count > 0)
                        {
                            <div class="alert alert-warning rounded-3 mb-4">
                                <h5 class="alert-heading">
                                    <i class="fas fa-file-exclamation me-2"></i>File Upload Error:
                                </h5>
                                <ul class="mb-0">
                                    @foreach (var error in ViewData.ModelState["Evidence"].Errors)
                                    {
                                        <li>@error.ErrorMessage</li>
                                    }
                                </ul>
                            </div>
                        }

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label asp-for="LecturerName" class="form-label fw-semibold"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0">
                                        <i class="fas fa-user text-primary"></i>
                                    </span>
                                    <input asp-for="LecturerName" class="form-control border-start-0" placeholder="Enter your full name" />
                                </div>
                                <span asp-validation-for="LecturerName" class="text-danger small mt-1"></span>
                            </div>

                            <div class="col-md-6 mb-4">
                                <label asp-for="HoursWorked" class="form-label fw-semibold"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0">
                                        <i class="fas fa-clock text-primary"></i>
                                    </span>
                                    <input asp-for="HoursWorked" class="form-control border-start-0" type="number" step="0.01" placeholder="0.00" />
                                </div>
                                <span asp-validation-for="HoursWorked" class="text-danger small mt-1"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label asp-for="Rate" class="form-label fw-semibold"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0">
                                        <i class="fas fa-money-bill-wave text-primary"></i>
                                    </span>
                                    <input asp-for="Rate" class="form-control border-start-0" type="number" step="0.01" placeholder="0.00" />
                                    <span class="input-group-text bg-light border-start-0">R</span>
                                </div>
                                <span asp-validation-for="Rate" class="text-danger small mt-1"></span>
                            </div>

                            <div class="col-12 mb-4">
                                <label asp-for="Note" class="form-label fw-semibold"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light align-items-start border-end-0 pt-3">
                                        <i class="fas fa-sticky-note text-primary"></i>
                                    </span>
                                    <textarea asp-for="Note" class="form-control border-start-0" rows="4" placeholder="Add any additional notes or description for this claim..."></textarea>
                                </div>
                                <span asp-validation-for="Note" class="text-danger small mt-1"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label for="evidence" class="form-label fw-semibold">Upload Evidence (PDF/DOCX)</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="fas fa-file-upload text-primary"></i>
                                </span>
                                <input type="file" name="evidence" class="form-control border-start-0" />
                            </div>
                            <div class="form-text">Supported formats: PDF, DOCX. Maximum file size: 5MB</div>
                            <!-- Display file validation errors -->
                            @if (ViewData.ModelState["Evidence"]?.Errors?.Count > 0)
                            {
                                <div class="text-danger small mt-1">
                                    @foreach (var error in ViewData.ModelState["Evidence"].Errors)
                                    {
                                        <div><i class="fas fa-exclamation-circle me-1"></i>@error.ErrorMessage</div>
                                    }
                                </div>
                            }
                        </div>

                        <div class="text-center mt-4 pt-3">
                            <button type="submit" class="btn btn-primary btn-lg px-5 me-3">
                                <i class="fas fa-paper-plane me-2"></i>Submit Claim
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-5">
                                <i class="fas fa-times me-2"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .card {
        border-radius: 1rem;
        background: white;
        border: none;
    }

    .form-control {
        border-radius: 0.5rem;
        border: 1px solid #dee2e6;
        padding: 0.75rem 1rem;
        font-size: 0.95rem;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.15);
        }

    .input-group-text {
        border-radius: 0.5rem 0 0 0.5rem;
        border: 1px solid #dee2e6;
        background: linear-gradient(135deg, #f8f9fa, #e9ecef);
    }

    .btn-primary {
        background: linear-gradient(90deg, #0d6efd, #0dcaf0);
        border: none;
        border-radius: 0.75rem;
        font-weight: 600;
        padding: 0.75rem 2rem;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background: linear-gradient(90deg, #0dcaf0, #0d6efd);
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(13, 110, 253, 0.3);
        }

    .btn-outline-secondary {
        border-radius: 0.75rem;
        font-weight: 600;
        padding: 0.75rem 2rem;
        transition: all 0.3s ease;
    }

        .btn-outline-secondary:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(108, 117, 125, 0.2);
        }

    .alert-danger {
        border-radius: 0.75rem;
        border: none;
        background: linear-gradient(135deg, #f8d7da, #f1aeb5);
        color: #721c24;
    }

    .alert-warning {
        border-radius: 0.75rem;
        border: none;
        background: linear-gradient(135deg, #fff3cd, #ffeaa7);
        color: #856404;
    }

    .form-label {
        font-weight: 600;
        color: #495057;
        margin-bottom: 0.5rem;
    }

    .form-text {
        font-size: 0.85rem;
        color: #6c757d;
        margin-top: 0.25rem;
    }

    /* File input custom styling */
    input[type="file"]::file-selector-button {
        background: linear-gradient(90deg, #0d6efd, #0dcaf0);
        border: none;
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 0.5rem;
        margin-right: 1rem;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        input[type="file"]::file-selector-button:hover {
            background: linear-gradient(90deg, #0dcaf0, #0d6efd);
        }

    .alert ul {
        padding-left: 1rem;
        margin-bottom: 0;
    }

    .alert li {
        margin-bottom: 0.25rem;
    }
</style>

<!-- Add Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">