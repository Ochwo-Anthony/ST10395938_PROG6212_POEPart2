@model IEnumerable<ST10395938_POEPart2.Models.LecturerClaim>
@{
    ViewData["Title"] = "Coordinator Dashboard";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-transparent border-0 pt-4">
            <h2 class="text-center mb-0" style="font-weight: 600;">Coordinator Dashboard</h2>
            <p class="text-center text-muted mt-2">Review and manage pending claims</p>
        </div>

        <div class="card-body p-4">
            <!-- Search Section -->
            <form method="get" asp-action="Index" class="row mb-4 p-4 rounded-3" style="background: linear-gradient(135deg, #f8f9fb 0%, #e9f1f7 100%);">
                <div class="col-md-8">
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0">
                            <i class="fas fa-search text-primary"></i>
                        </span>
                        <input type="text" name="lecturerName" value="@ViewBag.LecturerName" class="form-control border-start-0" placeholder="Search by Lecturer Name" />
                    </div>
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary w-100 h-100">
                        <i class="fas fa-search me-2"></i>Search Claims
                    </button>
                </div>
            </form>

            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <div class="mb-4">
                        <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
                        <h4 class="text-muted">All Caught Up!</h4>
                        <p class="text-muted mb-4">No pending claims to review at the moment.</p>
                    </div>
                </div>
            }
            else
            {
                <!-- Claims Table -->
                <div class="table-responsive rounded-3">
                    <table class="table table-hover mb-0">
                        <thead style="background: linear-gradient(90deg, #198754, #20c997); color: white;">
                            <tr>
                                <th class="border-0">ID</th>
                                <th class="border-0">Lecturer</th>
                                <th class="border-0">Hours</th>
                                <th class="border-0">Rate</th>
                                <th class="border-0">Total</th>
                                <th class="border-0">Evidence</th>
                                <th class="border-0">Note</th>
                                <th class="border-0">Submitted</th>
                                <th class="border-0 text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in Model)
                            {
                                <tr class="align-middle">
                                    <td class="fw-bold">@claim.Id</td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-user-circle text-primary me-2"></i>
                                            @claim.LecturerName
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-light text-dark">
                                            <i class="fas fa-clock me-1"></i>@claim.HoursWorked
                                        </span>
                                    </td>
                                    <td class="fw-semibold">@claim.Rate.ToString("C")</td>
                                    <td class="fw-bold text-primary">@((claim.HoursWorked * claim.Rate).ToString("C"))</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(claim.EvidenceFile))
                                        {
                                            <a href="~/uploads/@claim.EvidenceFile" target="_blank" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-eye me-1"></i>View
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">
                                                <i class="fas fa-times-circle me-1"></i>No File
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(claim.Note))
                                        {
                                            <span class="d-inline-block text-truncate" style="max-width: 200px;"
                                                  data-bs-toggle="tooltip" data-bs-title="@claim.Note">
                                                @claim.Note
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No note</span>
                                        }
                                    </td>
                                    <td class="text-muted small">@claim.CreateAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <form asp-action="Approve" method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@claim.Id" />
                                                <button type="submit" class="btn btn-success btn-sm">
                                                    <i class="fas fa-check me-1"></i>Approve
                                                </button>
                                            </form>

                                            <button class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#rejectModal-@claim.Id">
                                                <i class="fas fa-times me-1"></i>Reject
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Summary Stats -->
                <div class="row mt-4 g-3">
                    <div class="col-md-4">
                        <div class="card border-0 shadow-sm">
                            <div class="card-body text-center p-3">
                                <h6 class="card-title text-muted mb-2">Total Pending</h6>
                                <p class="card-text display-6 fw-bold text-primary">@Model.Count()</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card border-0 shadow-sm">
                            <div class="card-body text-center p-3">
                                <h6 class="card-title text-muted mb-2">Total Value</h6>
                                <p class="card-text display-6 fw-bold text-success">@Model.Sum(c => c.HoursWorked * c.Rate).ToString("C")</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card border-0 shadow-sm">
                            <div class="card-body text-center p-3">
                                <h6 class="card-title text-muted mb-2">Avg. Hours</h6>
                                <p class="card-text display-6 fw-bold text-info">@Model.Average(c => c.HoursWorked).ToString("F1")</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Move ALL modals outside the main content area - this is crucial -->
@foreach (var claim in Model)
{
    <div class="modal fade" id="rejectModal-@claim.Id" tabindex="-1" aria-labelledby="rejectLabel-@claim.Id" aria-hidden="true" data-bs-backdrop="static">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow">
                <div class="modal-header text-white" style="background: linear-gradient(90deg, #dc3545, #fd7e14); border-radius: 0.5rem 0.5rem 0 0;">
                    <h5 class="modal-title" id="rejectLabel-@claim.Id">
                        <i class="fas fa-exclamation-triangle me-2"></i>Reject Claim #@claim.Id
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body p-4">
                    <div class="alert alert-warning border-0 rounded-3 mb-4">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>Warning:</strong> This action cannot be undone. The lecturer will be notified.
                    </div>
                    <form asp-action="Reject" method="post" id="rejectForm-@claim.Id">
                        <input type="hidden" name="id" value="@claim.Id" />
                        <div class="mb-4">
                            <label for="reason-@claim.Id" class="form-label fw-semibold">Reason for Rejection</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="fas fa-comment-dots text-primary"></i>
                                </span>
                                <textarea name="reason" id="reason-@claim.Id" class="form-control border-start-0" rows="4"
                                      placeholder="Provide constructive feedback to help the lecturer improve their submission..."></textarea>
                            </div>
                            <div class="form-text">This feedback will be sent to the lecturer</div>
                        </div>
                        <div class="text-end">
                            <button type="submit" class="btn btn-danger btn-lg px-4 me-2">
                                <i class="fas fa-ban me-2"></i>Confirm Reject
                            </button>
                            <button type="button" class="btn btn-outline-secondary btn-lg px-4" data-bs-dismiss="modal">
                                <i class="fas fa-times me-2"></i>Cancel
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Initialize tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        })

        // Add confirmation for approve actions
        document.querySelectorAll('form[asp-action="Approve"]').forEach(form => {
            form.addEventListener('submit', function(e) {
                if (!confirm('Are you sure you want to approve this claim? This action will send it to the manager for final approval.')) {
                    e.preventDefault();
                }
            });
        });

        // Add confirmation for reject actions
        document.querySelectorAll('form[asp-action="Reject"]').forEach(form => {
            form.addEventListener('submit', function(e) {
                if (!confirm('Are you sure you want to reject this claim? This action cannot be undone.')) {
                    e.preventDefault();
                }
            });
        });

        // Fix for modal backdrop issues
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize all modals properly
            var modalEls = document.querySelectorAll('.modal');
            modalEls.forEach(function(modalEl) {
                modalEl.addEventListener('show.bs.modal', function() {
                    // Ensure proper z-index stacking
                    document.body.classList.add('modal-open');
                });
            });
        });
    </script>
}

